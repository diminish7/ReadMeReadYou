%div.submission#list_header
  %p
    %span.date=link_to "Date", submissions_path(sort:"activated_at")
    %span.title=link_to "Title", submissions_path(sort:"title")
    %span.author=link_to "Author", submissions_path(sort:"author")
    %span.genre=link_to "Genre", submissions_path(sort:"genre")
    %span.word_count=link_to "Word Count", submissions_path(sort:"word_count")
    %span.critique_count=link_to "Critiques", submissions_path(sort:"critique_count")
=render @submissions
